<!DOCTYPE html>
<html lang="fr">
  <head>
      <% include ../partials/head %>
  </head>
  <!-- if not connected, that person can't access the page -->
  <body class="background-form">
    <header>
        <% include ../partials/menu %>
    </header>

    <main>
      <!-- Form -->
      <div class="container">
       <div class="row">
         <form method="post" action="createProject" class="Absolute-Center is-Responsive card-form rounded" style="min-height: 550px;">
           <h3 class="text-center">Nouveau projet</h3>
           <br>
           <div class="form-group">
             <label for="inputName">Nom du projet</label>
             <input type="text" id="form_name" class="form-control" placeholder="Nom du projet" minlength="1" required name="name">
           </div>
           <div class="form-group">
             <label for="inputDescription">Description</label>
             <input type="text" id="form_description" class="form-control" placeholder="..." name="description">
           </div>
           <div class="form-group">
             <label for="inputSprintLength">Durée du sprint</label>
             <input type="number" id="form_sprint_length" class="form-control" placeholder="Durée du sprint (jours)" min="0" value="14" required name="durationSprint">
           </div>
           <div class="form-group">
             <label for="inputStartDay">Date de début du sprint</label>
             <input type="text" id="form_start_day" class="form-control" placeholder="jj-mm-aaaa" required name="startingDay">
           </div>
           <br>
           <input type="submit" value="Créer un projet" class="btn btn-info" id="form_button">
         </form>
       </div>
      </div>
    </main>

    <script>
    </script>
  </body>
</html>
