<!DOCTYPE html>
<html lang="fr">
  <head>
      <% include ../partials/head %>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous" defer></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous" defer></script>
  </head>
  <body class="background-form">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
       <!-- Form -->
      <div class="container">
        <div class="row">
          <form id="form" method="post" action="login" class="Absolute-Center Absolute-Center-Menu is-Responsive card-form rounded">
            <h3 class="text-center">Connexion à un compte</h3>
            <br>
            <div class="form-group">
              <label for="inputEmail">Addresse Email</label>
              <input type="email" id="form_email" class="form-control" placeholder="adresse@domaine.com" required  name="mail">
            </div>
            <div class="form-group">
              <label for="inputPassword1">Mot de passe</label>
              <input type="password" id="form_password" class="form-control" placeholder="Au moins 6 caractères." minlength="6" required name="password">
              <a href="javascript:showModal();">Mot de passe perdu ?</a>
            </div>
            <br>
            <input type="submit" value="Se connecter" class="btn btn-primary" id="form_button" disabled>
            <a href="createAccount" class="btn btn-secondary">Créer un compte</a>
            <div style="margin-top: 30px; color:red;">
            <%if(typeof error != "undefined"){%>
              <%= error.message%>
            <%}%>
          </div>
          </form>
        </div>
      </div>


      <!-- Modal -->
      <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Réinitialiser son mot de passe</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <form id="resetForm" method="post" action="resetPassword" class="modal-body">
              <label for="inputEmail">Addresse Email</label>
              <input type="email" id="form_email" class="form-control" placeholder="adresse@domaine.com" required  name="resetToMail">
            </form>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
              <button type="button" class="btn btn-primary" onclick="$('#resetForm').submit();">Envoyer lien de réinitialisation</button>
            </div>
          </div>
        </div>
      </div>

    <script>
      // test form's validity
      $('#form').on('change', ':input', function(e) {
        if($('#form_email').is(":valid") && $('#form_password').is(":valid")) {
          $('#form_button').prop('disabled', false);
          console.log("yep");
        } else {
          $('#form_button').prop('disabled', true);
        }
      });

      function showModal(){
        $('#modal').modal('show');
      }
    </script>

  </body>
</html>
