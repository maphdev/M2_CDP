<script>
  // Menu-toggle button
  $(".menu-icon").on("click", function() {
    $("nav ul").toggleClass("showing");
  });

  if (window.localStorage.getItem("userId") != null){
    $("#menu-connect").attr("href", "javascript:logOut()");
    $("#menu-connect").text("Se déconnecter (" + window.localStorage.getItem("userMail") + ")");

  } else {
    $("#menu-connect").attr("href", "/login");
    $("#menu-connect").text("Se connecter / Créer un compte");
  }
</script>
